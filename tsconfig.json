{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./types/shim-vue.d.ts"
    ],
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/dom-mediacapture-record"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
